<main>
  <div class="cards">
    {
      imageData.map((item) => {
        return (
          <div class="card">
          <Image src={item.src} alt="image" height={400} width={300}/>
        </div>
        )
      })
    }
  </div>
</main>

<style>
  main {
    margin: 0 1rem;
  }

  .cards {
    display: grid;
    grid-gap: 10px;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    grid-auto-rows: 400px 300px;
    grid-auto-flow: dense;
  }

  .card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  @media (min-width: 480px) {
    .card:first-child {
      grid-area: 1 / 1 / span 2 / span 2;
    } 
    
    .card:nth-child(3n) {
      grid-column: span 2;
    }
  }
</style>